<section id="create-container">
    <div class="create-container-info">
        <h1>Edit Event</h1>
        <form method="POST">
            <label>Name of the Disaster:</label>
            <input type="text" id="name" name="name" placeholder="..." value="{{event.name}}">
            <label>Type of Disaster:</label>
            <select id="type" name="type">
                <option value="Wildfire" {{#if (setSelectOption event.type "Wildfire")}}selected{{/if}}>Wildfire</option>
                <option value="Flood" {{#if (setSelectOption event.type "Flood")}}selected{{/if}}>Flood</option>
                <option value="Earthquake" {{#if (setSelectOption event.type "Earthquake")}}selected{{/if}}>Earthquake</option>
                <option value="Hurricane" {{#if (setSelectOption event.type "Hurricane")}}selected{{/if}}>Hurricane</option>
                <option value="Drought" {{#if (setSelectOption event.type "Drought")}}selected{{/if}}>Drought</option>
                <option value="Tsunami" {{#if (setSelectOption event.type "Tsunami")}}selected{{/if}}>Tsunami</option>
                <option value="Other" {{#if (setSelectOption event.type "Other")}}selected{{/if}}>Other</option>
            </select>
            <label>Year of the Event:</label>
            <input type="number" id="elevations" name="year" placeholder="..." value="{{event.year}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." value="{{event.location}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" placeholder="http://..." value="{{event.imageUrl}}">
            <label>Description:</label>
            <textarea id="description" name="description"
                placeholder="...">{{event.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>