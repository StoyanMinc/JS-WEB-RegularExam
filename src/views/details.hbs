<section id="details-info">
    <h1>Details</h1>
    <div class="image">
        <img src="{{event.imageUrl}}">
    </div>

    <div class="info">
        <div class="text">
            <h1 id="name">{{event.name}}</h1>
            <h3 id="location">Location: {{event.location}}</h3>
            <p id="type">Type: {{event.type}}</p>
            <p id="year"><span>Year of the Event: {{event.year}}</span></p>
            <p id="interested">Interested: {{event.interestedList.length}}</p>
            <p id="description">{{event.description}}</p>
        </div>
        {{#if isLogin}}
        <div class="product-btn">
            <!--Only for registered user and author of the publication -->
            {{#if isOwner}}
            <div class="author">
                <a href="/catalog/{{event._id}}/edit" class="btn-edit">Edit</a>
                <a href="/catalog/{{event._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{else}}
            <!-- Logged in user who has not yet interested for this post-->
            {{#unless isInterested}}
            <a href="/catalog/{{event._id}}/interested" class="btn-interested">Interested</a>
            {{else}}
            <!-- Logged in user who has already interested for this post-->
            <p class="interested-message">You've already been interested in this event!</p>
            {{/unless}}
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>